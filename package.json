{
  "private": true,
  "type": "module",
  "name": "react-ts-vite",
  "description": "리액트 템플릿 (Bun + Vite + TypeScript)",
  "version": "1.2.0",
  "bun-create": {
    "preinstall": [],
    "postinstall": ["bunx rimraf -rf .git", "bunx rimraf -rf dist"],
    "start": "bun run dev"
  },
  "scripts": {
    "dev": "bunx --bun vite",
    "prod": "bun vite build",
    "preview": "bun vite preview",
    "format:check": "prettier --check --cache \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "format:fix": "prettier --write --cache --list-different \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint:check": "eslint \"src/**/*.{js,jsx,ts,tsx,json}\" --cache --cache-location ./node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "bun lint:check --fix",
    "clean": "rimraf -rf dist"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "use-immer": "^0.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.12",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.12",
    "terser": "^5.43.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vite-plugin-compression": "^0.5.1"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}